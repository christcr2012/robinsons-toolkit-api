{
  "openapi": "3.1.0",
  "info": {
    "title": "Robinson's Toolkit API",
    "description": "Serverless API wrapper for Robinson's Toolkit - Access 1,713 tools across 17 categories including GitHub, Vercel, Neon, Upstash, Google Workspace, OpenAI, Stripe, Supabase, and more.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://robinsons-toolkit-api.vercel.app"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "description": "Check if the API is running",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "ts": { "type": "string" },
                    "commit": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/execute": {
      "post": {
        "summary": "Execute a tool",
        "description": "Execute any tool from Robinson's Toolkit by name. Available tools include: github_*, vercel_*, neon_*, upstash_*, google_*, openai_*, stripe_*, supabase_*, playwright_*, twilio_*, resend_*, context7_*, cloudflare_*, postgres_*, neo4j_*, qdrant_*, n8n_*",
        "operationId": "executeTool",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["tool"],
                "properties": {
                  "tool": {
                    "type": "string",
                    "description": "Tool name (e.g., 'github_list_repos', 'vercel_list_projects')"
                  },
                  "args": {
                    "type": "object",
                    "description": "Tool-specific arguments",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tool executed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "result": {
                      "description": "Tool execution result",
                      "oneOf": [
                        { "type": "object" },
                        { "type": "array" },
                        { "type": "string" },
                        { "type": "number" },
                        { "type": "boolean" }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing or invalid parameters"
          },
          "401": {
            "description": "Unauthorized - invalid or missing API key"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
